DECLARE
    num NUMBER := &num;
    temp NUMBER;
    rem NUMBER;
    sum NUMBER := 0;
    digits NUMBER := 0;
    n NUMBER;
BEGIN
    temp := num;

    -- Count number of digits
    n := temp;
    WHILE n > 0 LOOP
        digits := digits + 1;
        n := FLOOR(n / 10);
    END LOOP;

    -- Calculate sum of each digit raised to the power of digits
    temp := num;
    WHILE temp > 0 LOOP
        rem := MOD(temp, 10);
        sum := sum + POWER(rem, digits);
        temp := FLOOR(temp / 10);
    END LOOP;

    IF sum = num THEN
        DBMS_OUTPUT.PUT_LINE(num || ' is an Armstrong number.');
    ELSE
        DBMS_OUTPUT.PUT_LINE(num || ' is not an Armstrong number.');
    END IF;
END;
/
