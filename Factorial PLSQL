DECLARE
    num NUMBER := &num;
    i NUMBER := 1;
    fact NUMBER := 1;
BEGIN
    IF num < 0 THEN
        DBMS_OUTPUT.PUT_LINE('Factorial is not defined for negative numbers.');
    ELSE
        WHILE i <= num LOOP
            fact := fact * i;
            i := i + 1;
        END LOOP;

        DBMS_OUTPUT.PUT_LINE('Factorial of ' || num || ' is ' || fact);
    END IF;
END;
/
