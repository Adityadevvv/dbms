DECLARE
    num NUMBER := &num;
    i NUMBER := 2;
    flag NUMBER := 0;
BEGIN
    IF num <= 1 THEN
        DBMS_OUTPUT.PUT_LINE(num || ' is not a prime number.');
    ELSE
        WHILE i <= num / 2 LOOP
            IF MOD(num, i) = 0 THEN
                flag := 1;
                EXIT;
            END IF;
            i := i + 1;
        END LOOP;

        IF flag = 0 THEN
            DBMS_OUTPUT.PUT_LINE(num || ' is a prime number.');
        ELSE
            DBMS_OUTPUT.PUT_LINE(num || ' is not a prime number.');
        END IF;
    END IF;
END;
/
